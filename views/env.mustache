<script type="module">
  import {
    envs as user_envs,
  } from './user.js';

  let e;

  if (location.hostname.match(/localhost/))
    e = 'production';
  else {
    const subdomain = location.hostname.match(/^(.*).energyaccessexplorer.org/)[1];

    switch (subdomain) {
    case 'www':
      e = 'production';
      break;

    default:
      e = subdomain;
      break;
    }
  }

  const ee = [e].flat();
  const x = user_envs().filter(t => ee.indexOf(t) > -1);

  window.ENV = x.length ? x : e;
</script>
