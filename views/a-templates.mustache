<template id="country-overview">
  <div class="country-overview">
    <section>
      <strong>Population:</strong> <span bind="population"></span> million
    </section>

    <section>
      <strong>&nbsp;&nbsp;&nbsp;&nbsp; Urban:</strong> <span bind="urban_population"></span>%
    </section>

    <section>
      <strong>&nbsp;&nbsp;&nbsp;&nbsp; Rural:</strong> <span bind="rural_population"></span>%
    </section>

    <section>
      <strong>Area:</strong> <span bind="area"></span> km<sup>2</sup>
    </section>

    <section>
      <strong>GDP per capita:</strong> USD <span bind="gdp_percapita"></span>
    </section>

    <section>
      <strong>Electrification Rate:</strong> <span bind="electrification"></span>%
    </section>

    <section>
      <div style="display: flex; justify-content: space-around;
                  text-align: center;
                  text-transform: uppercase;
                  color: var(--the-green);">
        <strong style="margin: 0.5em;">Urban</strong>
        <strong style="margin: 0.5em;">Rural</strong>
      </div>

      <div style="display: flex; justify-content: space-around;
                  margin-bottom: 30px;">
        <div style="display: flex; justify-content: space-around; width: 240px; padding: 0 1em;
                    border-right: 1px solid lightgray;">
          <span class="small">
            Electrified:&nbsp; <strong><span bind="urban_electrification"></span>%</strong>
          </span>

          <span bind="urban_electrification_pie"></span>
        </div>

        <div style="display: flex; justify-content: space-around; width: 240px; padding: 0 1em;">
          <span class="small">
            Electrified:&nbsp; <strong><span bind="rural_electrification"></span>%</strong>
          </span>

          <span bind="rural_electrification_pie"></span>
        </div>
      </div>
    </section>

    <section>
      <strong>Energy intensity level of primary energy (MJ/$2011 PPP GDP):</strong> <span bind="primary_intensity"></span>
    </section>

    <section>
      <strong>Power outages in firms in a typical month:</strong> <span bind="outages_average"></span>
    </section>
  </div>
</template>

<template id="ds-info-modal">
  <div style="display:flex; flex-flow: row nowrap;">
    <div class="left" style="flex: 1;">
      <section bind-cond="description">
        <h3>Description</h3><pre class="description-text" bind="description"></pre>
      </section>

      <section bind-cond="category-description">
        <h3>Why is this dataset used?</h3><pre class="description-text" bind="category-description"></pre>
      </section>

      <section bind-cond="suggested_citation">
        <h3>Suggested Citation</h3><pre class="description-text" bind="suggested_citation"></pre>
      </section>

      <section bind-cond="cautions">
        <h3>Cautions</h3><pre class="description-text" bind="cautions"></pre>
      </section>
    </div>

    <div class="right" style="flex: 0 300px; padding-left: 3em;">
      <section>
        <a class="download-link"
           bind-cond="download_original_url"
           bind-attr="href"
           bind-arg="download_original_url"
           target="_blank">Download from Source</a>
      </section>

      <section>
        <a class="download-link"
           bind-cond="learn_more_url"
           bind-attr="href"
           bind-arg="learn_more_url"
           target="_blank">Learn More</a>
      </section>

      <section bind-cond="sources">
        <h3>Sources</h3>
        <pre class="description-text" bind="sources"></pre>
      </section>

      <section bind-cond="spatial_resolution">
        <h3>Spatial Resolution</h3>
        <span bind="spatial_resolution"></span>
      </section>

      <section bind-cond="license">
        <h3>License</h3>
        <span bind="license"></span>
      </section>

      <section bind-cond="content_date">
        <h3>Date of Content</h3>
        <span bind="content_date"></span>
      </section>
    </div>
  </div>
</template>

<template id="share-link-modal-content">
  <p>
    Sharing the following link will load the Energy Access Explorer platform in
    the current state: layers and analysis.

    Users might need the necessary permissions to view this snapshot fully.
  </p>

  <div style="display:flex; flex-flow: row nowrap;">
    <input id="share-link-input"
           type="text"
           bind="url"
           disabled
           focus />

    <button type="button"
            id="share-link-copy-button">
      <i class="bi bi-copy"
         bind-listen="click"
         bind-func="copy"></i>
    </button>
  </div>
</template>

<template id="index-graphs-container-template">
  <div class="index-graphs-container">
    <div class="index-graphs-group">
      <div>Area share</div>
      <div id="area-number" class="indexes-pie-label"></div>
    </div>

    <div class="index-graphs-group">
      <div>Population share</div>
      <div id="population-number" class="indexes-pie-label"></div>
    </div>
  </div>
</template>

<template id="geographies-search-item">
  <div bind="name"></div>

  <buttons>
    <span class="bi-zoom-in"
          zoom="true"></span>

    <span class="bi-box-arrow-in-down"
          bind-cond="url"
          bind-attr="href"
          bind-arg="url"></span>
  </buttons>
</template>

<template id="points-input-form">
  <form>
    <input id="lng"
           type="number"
           step="any"
           placeholder="Longitude"
           style="padding: 5px 7px;">

    <input id="lat"
           type="number"
           step="any"
           placeholder="Latitude"
           style="padding: 5px 7px;">

    <br><br>

    <button type="submit"
            class="big-green-button"
            style="font-size: 0.8em; margin: auto;">Add point</button>
  </form>
</template>
