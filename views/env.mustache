<script type="module">
  import {
    envs as user_envs,
    logged_in as user_logged_in,
  } from './user.js';

  let e;

  if (location.hostname.match(/localhost/))
    e = 'production';
  else {
    const subdomain = location.hostname.match(/^(.*).energyaccessexplorer.org/)[1];

    switch (subdomain) {
    case 'www':
      e = 'production';
      break;

    default:
      e = subdomain;
      break;
    }
  }

  const ee = [e].flat();
  const env = user_envs().filter(t => ee.indexOf(t) > -1);

  if (env[0] !== 'production') {
    if (!user_logged_in()) window.location = '/login';

    document.head.append(ce('link', null, { "rel": "stylesheet", "href": "/stylesheets/env.css" }))
    document.querySelector('[href="/"]').setAttribute('data-content', env);
  }

  window.ENV = env;
</script>
