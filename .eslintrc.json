{
	"env": {
		"browser": true,
		"es2022": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns": ["/lib/*.js"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": "off",
		"semi": ["error", "always"],
		"no-cond-assign": "off",
		"no-console": "off",
		"no-useless-escape": "off",
		"no-extra-semi": "off",
		"no-mixed-spaces-and-tabs":	 ["error", "smart-tabs"],
		"no-prototype-builtins": "off",
		"no-unused-vars": ["warn", {
			"varsIgnorePattern": "^_",
			"argsIgnorePattern": "^_"
		}]
	},
	"globals": {
		"d3": "readonly",
		"sortable": "readonly",
		"mapboxgl": "readonly",
		"GeoTIFF": "readonly",
		"geojsonExtent": "readonly",
		"jsPDF": "readonly",
		"SphericalMercator": "readonly",
		"jwt_decode": "readonly",

		"DST": "readonly",
		"GEOGRAPHY": "writable",
		"OUTLINE": "writable",
		"MAPBOX": "writable",
		"INFOMODE": "writable",
		"NORM_STOPS": "writable",
		"MOBILE": "writable",
		"U": "writable",
		"O": "writable",
		"ENV": "writable",
		"PARAMS": "writable",

		"qs": "readonly",
		"qsa": "readonly",
		"ce": "readonly",
		"delay": "readonly",
		"until": "readonly",
		"maybe": "readonly",
		"has": "readonly",
		"and": "readonly",
		"or": "readonly",
		"coalesce": "readonly",
		"attach": "readonly",
		"bind": "readonly",
		"tmpl": "readonly",
		"slot_populate": "readonly",
		"Whatever": "readonly",
		"same": "readonly",
		"uuid": "readonly",
		"font_icon": "readonly",
		"fake_blob_download": "readonly",

		"browsers": "readonly",
		"nanny": "readonly",
		"bubblearrow": "readonly",
		"selectlist": "readonly",
		"dropdown": "readonly",

		"FLASH": "readonly",
		"MODAL": "readonly",
		"API": "readonly",
		"NANNY": "readonly",

		"ea_settings": "readonly",
		"ea_views": "writable",
		"ea_params": "writable",
		"ea_indexes": "writable",
		"ea_default_colorscale": "writable",
		"ea_analysis_colorscale": "writable",
		"ea_lowmedhigh_scale": "writable",

		"colorscale": "readonly",
		"svg_pie": "readonly",
		"svg_interval": "readonly",
		"svg_checkbox": "readonly",
		"opacity_control": "readonly",
		"elem_collapse": "readonly",
		"loading": "readonly",
		"super_error": "readonly",
		"table_keyvalue": "readonly",
		"table_data": "readonly",
		"map_pointer": "readonly",
		"coordinates_to_raster_pixel": "readonly",
		"raster_pixel_to_coordinates": "readonly",
		"jsonclone": "readonly"
	}
}
